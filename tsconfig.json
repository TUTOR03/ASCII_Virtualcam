{
  "compilerOptions": {
    "module": "es2020",
    "target": "es2020",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "lib": ["DOM"],
    "allowJs": true,
    "paths": {
      "@components/*": ["./src/components/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
